<style>
  .dropdown{
    position:relative;
    display:inline-block;
  }
  .drop-content{
    display:none ;
    position: absolute;
    z-index:1;
  }
  .drop-content a{
    display:block;
  }
  .dropdown:hover .drop-content{
    display:block;
  }
  .down {
    transform: rotate(45deg);
    -webkit-transform: rotate(45deg);
  }
  i {
    border: solid gray;
    border-width: 0 3px 3px 0;
    display: inline-block;
    padding: 3px;
  }
</style>

<!-- the white portion -->
<div class="container w-full mx-auto flex flex-col items-center justify-center px-2 my-12">
  <div class="bg-white px-6 py-8 border rounded-lg shadow-md text-black w-full">
    <h1 class="pb-6 text-3xl text-center font-semibold text-pink-700">Current Services</h1>
    <p class="mb-8 text-2xl text-center">Services</p>

    <!-- table -->
    <table class="w-full">
      <thead>
      <tr class="bg-gray-300 border border-gray-400">
        <th class="py-4">Service Name</th>
        <th class="py-4">Price</th>
        <th class="py-4" colspan="3">Actions</th>
      </tr>
      </thead>

      <tbody>
      <% @services.each do |service| %>
        <tr class="content-center border-b border-t hover:bg-pink-200">
          <td class="w-full text-center px-4 py-2"><%= service.serviceName %></td>
          <td class="w-full px-12 py-2">$<%= service.servicePrice %></td>
          <td class="w-full px-4 py-2">
          <div class="dropdown">
            <button class=" shadow-md border border-gray-500 cursor-pointer font-semibold bg-white hover:bg-gray-400 text-white px-5 py-2 inline-block rounded"><i class="arrow down"></i></button>
            <div class="drop-content right-0 mt-0 shadow-md w-32 bg-white rounded-lg py-2 text-center">
              <%= link_to 'Show', service , class:"block px-4 py-2 text-gray-800 hover:bg-indigo-500 hover:text-white" %>
              <%= link_to 'Edit', edit_service_path(service) , class:"block px-4 py-2 text-gray-800 hover:bg-indigo-500 hover:text-white" %>
              <%= link_to 'Remove', service, method: :delete, data: { confirm: 'Are you sure?' } , class:"block px-4 py-2 text-gray-800 hover:bg-red-600 hover:text-white" %>
            </div>
          </div>
        </td>
        </tr>
      <% end %>
      </tbody>
    </table>

    <div class="py-10 text-center">
      <%= link_to 'Add a New Service', new_service_path, class:"cursor-pointer font-semibold bg-pink-700 hover:bg-pink-900 text-white mr-3 px-5 py-2 mb-4 inline-block rounded" %>
    </div>

  </div>
</div>


