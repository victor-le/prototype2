<!-- the white portion -->
<div class="container w-full mx-auto flex flex-col items-center justify-center px-2 my-12">
  <div class="bg-white px-6 py-8 border rounded-lg shadow-md text-black w-full">
    <h1 class="pb-6 text-3xl text-center font-semibold text-pink-700">Current Durations</h1>
    <p class="mb-8 text-2xl text-center">Appointment Durations</p>


    <!-- table -->
    <table class="w-full">
      <thead>
      <tr class="bg-gray-300 border border-gray-400">
        <th class="py-4">Duration Length in Minutes</th>
        <th class="py-4">Price</th>
        <th class="py-4" colspan="3">Actions</th>
      </tr>
      </thead>

      <tbody>
      <% @app_durations.each do |app_duration| %>
        <tr class="content-center border-b border-t hover:bg-pink-200">
          <td class="w-full text-center px-4 py-2"><%= app_duration.duration %></td>
          <td class="w-full px-12 py-2">$<%= app_duration.durationPrice %></td>
          <td class="w-full px-2 py-2"><%= link_to 'Show', app_duration , class:"cursor-pointer font-semibold bg-gray-500 hover:bg-green-600 text-white px-5 py-2 inline-block rounded"%></td>
          <td class="w-full px-2 py-2"><%= link_to 'Edit', edit_app_duration_path(app_duration) , class:"cursor-pointer font-semibold bg-gray-500 hover:bg-blue-600 text-white px-5 py-2 inline-block rounded"%></td>
          <td class="w-full px-2 py-2"><%= link_to 'Remove', app_duration, method: :delete, data: { confirm: 'Are you sure?' } , class:"cursor-pointer font-semibold bg-red-600 hover:bg-red-800 text-white px-5 py-2 inline-block rounded"%></td>
      <% end %>
      </tbody>
    </table>

    <div class="py-10">
      <%= link_to 'Add a New Time Duration', new_app_duration_path, class:"cursor-pointer font-semibold bg-pink-700 hover:bg-pink-900 text-white mr-3 px-5 py-2 mb-4 inline-block rounded" %>
    </div>

  </div>
</div>





