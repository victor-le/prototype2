<p id="notice"><%= notice %></p>
<div class="container max-w-xl mx-auto flex flex-col items-center justify-center px-2 my-12">
  <div class="bg-white px-6 py-8 border rounded-lg shadow-md text-black w-full">
<h1 class="mb-8 text-3xl text-center">Appointment Time Slots</h1>

<table class="table-auto">
  <thead>
    <tr>
      <th>Appointment Date and Time</th>
      <th>Booked?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @app_times.each do |app_time| %>
      <tr>
        <td class="border px-4 py-2"><%= app_time.appDate %></td>
        <td class="border px-4 py-2"><%= app_time.booked %></td>
        <td class="border px-4 py-2"><%= link_to 'Show', app_time %></td>
        <td class="border px-4 py-2"><%= link_to 'Edit', edit_app_time_path(app_time) %></td>
        <td class="border px-4 py-2"><%= link_to 'Destroy', app_time, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add a New Time Slot', new_app_time_path, class:"cursor-pointer font-semibold bg-pink-700 hover:bg-pink-900 text-white mr-3 px-5 py-2 mb-4 inline-block rounded" %>
