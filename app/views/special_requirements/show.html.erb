<div class="container w-full mx-auto flex flex-col items-center justify-center px-2 my-12">
  <div class="bg-white px-6 py-8 border rounded-lg shadow-md text-black w-full">
    <h1 class="pb-6 text-3xl text-center font-semibold text-pink-700">Showing</h1>
    <p class="mb-8 text-2xl text-center">Special Requirement Details</p>

    <table class="w-full">
      <thead>
      <tr class="bg-gray-300 border border-gray-400">
        <th class="py-4">Requirement Description</th>
        <th class="py-4">Price</th>
        <th class="py-4" colspan="2">Actions</th>
      </tr>
      </thead>

      <tbody>

      <tr class="content-center border-b border-t hover:bg-pink-200">
        <td class="w-full text-center px-4 py-2">
          <%= @special_requirement.requirementDesc %>
        </td>
        <td class="w-full px-12 py-2">
          <%= @special_requirement.requirementValue %>
        </td>
        <td class="w-full px-4 py-2">
          <%= link_to 'Edit', edit_special_requirement_path(@special_requirement) , class:"cursor-pointer font-semibold bg-gray-500 hover:bg-green-600 text-white px-5 py-2 inline-block rounded"%>
        </td>
      </tr>

      </tbody>
    </table>


    <div class="py-10 text-center">
      <%= link_to 'Back', special_requirements_path , class:"cursor-pointer font-semibold border border-pink-700 hover:border-pink-900 mr-3 px-5 py-2 inline-block text-pink-700 hover:text-pink-900 rounded"%>
    </div>


  </div>
</div>
